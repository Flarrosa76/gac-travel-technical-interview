{% extends 'layouts/login.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
          
            <div class="container mt-5">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 mt-4">
                                <h3 class="mb-3">Bienvenido <strong> {{ app.user.username }} </strong></h3>
                                <p class="mt-2 mr-4">Aqui muestro el listado base de productos para usuarios con rol user</p>
                        </div>
                        <div class="col-lg-12">
                            <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                                <div>
                                    <h4 class="mb-3">Productos</h4>
                                </div>                            
                                {% if app.user %}
                                    <div class="">
                                        Usuario: &nbsp;&nbsp; <b>{{ app.user.username }}</b>, &nbsp;&nbsp;  <a href="{{ path('app_logout') }}">Salir</a>
                                    </div>
                                {% endif %}   
                                <a href="perfil" class="btn btn-primary add-list">
                                    <i class="las la-plus mr-3"></i>Ver perfil
                                </a>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="table-responsive mb-3">
                                <table class="table mb-0 tbl-server-info no-footer" role="grid">
                                    <thead class="bg-white text-uppercase">
                                        <tr class="ligth ligth-data" role="row">
                                            <th class="text-left">id</th>
                                            <th class="text-left">Categoria</th>
                                            <th class="text-left">Nombre</th>
                                            <th class="text-center">Stock</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for producto in productos %}
                                        <tr>
                                            <td class="text-left">{{producto.id}}</td>
                                            <td class="text-left">{{producto.category.name }}</td>
                                            <td class="text-left">{{producto.name }}</td>
                                            <td class="text-center">{{producto.stock }}</td>
                                        </tr>
                                         {% endfor%}
                                    </tbody>
                                </table>
                            </div>
                        </div> 
                    </div>
                </div>
            </div>
{% endblock %}
