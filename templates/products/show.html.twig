{% extends 'layouts/base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}

            <div class="row">
                <div class="col-lg-12">
                    <div class="d-flex align-items-center justify-content-between mb-4 mt-5 pt-5">
                        <div>
                            <h4 class="mb-3">Ver Producto</h4>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ product.id }}</td>
                            </tr>
                            <tr>
                                 <th>Nombre</th>
                                <td>{{ product.name }}</td>
                            </tr>
                            <tr>
                                 <th>Categoria</th>
                                <td>{{ product.category.name }}</td>
                            </tr>                            
                             <tr>
                                 <th>Stock</th>
                                <td>{{ product.stock }}</td>
                            </tr>  
                            <tr>
                                <th>Creado</th>
                                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                    <div class="col-lg-12 mt-4 text-center">
                    <a class="btn btn-success mr-2 " href="{{ path('app_products_edit', {'id': product.id}) }}"> <i class="ri-pencil-line"></i> Editar</a>
                    <a class="btn btn-secondary mr-2" href="{{ path('app_products_index') }}">Volver al listado</a>
                </div> 
            </div>
{% endblock %}
