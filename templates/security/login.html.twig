{% extends 'layouts/login.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
        <div class="wrapper">
            <section class="login-content">
                <div class="container">
                    <div class="row align-items-center justify-content-center height-self-center">
                        <div class="col-lg-8">
                            <div class="card auth-card">
                                <div class="card-body p-0">
                                    <div class="d-flex align-items-center auth-content">
                                        <div class="col-lg-7 align-self-center">
                                            <div class="p-3">
                                                <h2 class="mb-4">Acceder</h2>
                                                
                                                       <div class="row">
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="floating-input form-control" autocomplete="username" required autofocus>
                                                                <label>Usuario</label>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-12">
                                                            <div class="floating-label form-group">
                                                                <input type="password" name="password" id="inputPassword" class="floating-input form-control" autocomplete="current-password" required>
                                                                <label>Contrase√±a</label>
                                                            </div>
                                                        </div>   
                                                    </div>
                                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                                    <button type="submit" class="btn btn-primary">Acceder</button>
                                                    {% if app.user %}
                                                        <div class="mb-3 mt-3">
                                                            Te has logueado como {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
                                                        </div>
                                                    {% endif %}   
                                                    <p class="mt-3">
                                                         Crear una cuenta <a href="register" class="text-primary">Registrarse</a>
                                                    </p>
                                                </form>
                                            </div>
                                        </div>
                                        <div class="col-lg-5 content-right">
                                            <img src="assets/images/login/01.png" class="img-fluid image-right" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
</form>
{% endblock %}
