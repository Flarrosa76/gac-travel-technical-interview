{% extends 'layouts/base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block body %}
  
        <div class="row">
            <div class="col-lg-12 mt-5 pt-5">
                <div class="table-responsive mb-3">
                    <table class="table mb-0 tbl-server-info no-footer" role="grid">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data" role="row">
                                <th class="text-left">id</th>
                                <th class="text-left">Username</th>
                                <th class="text-left">Password</th>
                                <th class="text-left">Roles</th>
                                <th class="text-left">Activo</th>
                                <th class="text-left">Fecha de creación</th>
                                <th class="text-right">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td class="text-left">{{ user.id }}</td>
                                    <td class="text-left">{{ user.username }}</td>
                                    <td class="text-left">{{ user.password[:10] }}</td>
                                    <td class="text-left">{{ user.active }}</td>
                                    <td class="text-left">{{ user.roles ? user.roles|json_encode : '' }}</td>
                                    <td class="text-left">{{ user.createdAt ? user.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                    <td class="text-right">
                                    <a class="badge bg-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" href="{{ path('app_users_edit', {'id': user.id}) }}">
                                        <i class="ri-pencil-line"></i>
                                    </a>
                                    <a class="badge bg-success" data-toggle="tooltip" data-placement="top" title="" data-original-title="Histórico" href="{{ path('app_users_show', {'id': user.id}) }}">
                                        <i class="las la-eye"></i>
                                    </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div> 
        </div>

{% endblock %}
