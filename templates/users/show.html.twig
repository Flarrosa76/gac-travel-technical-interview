{% extends 'layouts/base.html.twig' %}

{% block title %}Usuarios{% endblock %}

{% block body %}

            <div class="row">
                <div class="col-lg-12 mt-5 pt-5">
                    <table class="table">
                               <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Username</th>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <th>Roles</th>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Password</th>
                                    <td>{{ user.password }}</td>
                                </tr>
                                <tr>
                                    <th>Active</th>
                                    <td>{{ user.active ? 'Yes' : 'No' }}</td>
                                </tr>
                                <tr>
                                    <th>Created_at</th>
                                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                            </tbody>
                    </table>
                </div>
                    <div class="col-lg-12 mt-4 text-center">
                    <a class="btn btn-success mr-2 " href="{{ path('app_users_edit', {'id': user.id}) }}"> <i class="ri-pencil-line"></i> Editar</a>
                    <a class="btn btn-secondary mr-2" href="{{ path('app_users_index') }}">Volver al listado</a>
                </div> 
            </div>
   
{% endblock %}
