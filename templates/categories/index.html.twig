{% extends 'layouts/base.html.twig' %}

{% block title %}Categrorias{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 pt-5 mt-5">
            <div class="table-responsive mb-3 ">
                <table class="table mb-0 tbl-server-info no-footer" role="grid">
                    <thead class="bg-white text-uppercase">
                        <tr class="ligth ligth-data" role="row">
                            <th class="text-left">id</th>
                            <th class="text-left">Nómbre</th>
                            <th class="text-left">Fecha de creación</th>
                            <th class="text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for category in categories %}
                            <tr>
                                <td class="text-left">{{ category.id }}</td>
                                <td class="text-left">{{ category.name }}</td>
                                <td class="text-left">{{ category.createdAt ? category.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                                <td class="text-right">
                                <a class="badge bg-warning" data-toggle="tooltip" data-placement="top" title="" data-original-title="Editar" href="{{ path('app_categories_edit', {'id': category.id}) }}">
                                    <i class="ri-pencil-line"></i>
                                </a>
                                <a class="badge bg-success" data-toggle="tooltip" data-placement="top" title="" data-original-title="Ver categoria" href="{{ path('app_categories_show', {'id': category.id}) }}">
                                    <i class="las la-eye"></i>
                                </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">No hay categorias</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div> 
    </div>
{% endblock %}
