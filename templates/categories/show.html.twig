{% extends 'layouts/base.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
            <div>
                <h4 class="mb-3">Ver categoría</h4>
            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    </div>
        <div class="col-lg-12 mt-4 text-center">
        <a class="btn btn-success mr-2 " href="{{ path('app_categories_edit', {'id': category.id}) }}"> <i class="ri-pencil-line"></i> Editar</a>
        <a class="btn btn-secondary mr-2" href="{{ path('app_categories_index') }}">Volver al listado</a>
    </div> 
</div>¡
{% endblock %}